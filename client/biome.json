{
	"$schema": "https://biomejs.dev/schemas/1.7.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnusedImports": "warn",
				"noUnusedVariables": {
					"level": "error"
				}
			}
		}
	},
	"formatter": {
		"lineWidth": 90,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineEnding": "lf"
	},
	"javascript": {
		"formatter": {
			"enabled": true,
			"trailingComma": "all",
			"semicolons": "always",
			"bracketSpacing": true
		}
	},
	"files": {
		"ignore": ["./src/routeTree.gen.ts"]
	}
}
